<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">

        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_night"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="@string/night_mode" />

                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_font"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="@string/font_size" />
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_language"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="@string/multi_language" />
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/menu_cache"
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="@string/clear_cache" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>